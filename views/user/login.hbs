<style>
    .card-body {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Add the block shadow */
    }

    .card {
        background-color: rgba(255, 255, 255, 0.155); /* Set the background color to transparent */
        border: none; /* Remove the border */
        border-radius: 20px; /* Add border radius */
        backdrop-filter: blur(10px);
        transition: transform 0.5s ease; /* Add transition */
    }

    .card:hover {
        transform: translateY(-15px); /* Increase the translateY on hover */
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.4); /* Change the box shadow on hover */
    }

    .login-section {
        background-image: url("https://w.forfun.com/fetch/0b/0bc739968eeb709d8eebbdb132141cb8.jpeg");
        background-size: cover;
        background-position: center;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .footer {
        background-color: #000;
        color: #fff;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        bottom: 0;
        width: 100%;
        height: 80px;
    }

    .footer p {
        margin: 0;
    }

    /* Responsive Styles */

    @media (max-width: 768px) {
        .card {
            margin: 0 15px;
        }
    }

    @media (max-width: 576px) {
        .card {
            margin: 0 10px;
        }

        .footer {
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: auto;
            padding: 10px;
        }

        .footer p {
            text-align: center;
            margin-bottom: 5px;
        }
    }
</style>

