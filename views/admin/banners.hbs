<section style='padding-left: 150px; ;'>
  <div class='container'>
    <div class='row mt-4'>
      <div class='col-md-12'>
        <div class='card'>

          <div class='card-body'>
            <div class='row'>
              <div class='col-md-12 text-right'>
                <a href='/admin/addBanner' class='btn btn-success'>Add banner</a>
              </div>
            </div>

            <div class='table-responsive mt-5'>
              <table
                class='table table-bordered table-hover'
                id='productsTable'
              >
                <thead class='thead-dark'>
                  <tr>
                    <th scope='col'>Banner</th>
                    <th scope='col'>Options</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each banners}}
                    <tr>
                      <td><img
                          style='width: 700px; height: 200px;'
                          src='{{this.photos.0.fileName}}'
                          alt=''
                        /></td>
                      <td>
                        <form
                          action='/delete-banner/{{this._id}}'
                          method='POST'
                        >
                          <a
                            href='/admin/delete-banner/{{this._id}}'
                            class='btn btn-danger btn-sm'
                            onclick='return '
                          >Delete</a>
                        </form>
                      </td>
                    </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

